a = 3       // implicit, __range:3u2bits
a = a + 1   // OK
b = 3u2bits // explicit, __bits:2 __range:3u2bits
b = b - 1   // OK, __range:2u2bits
b = b + 2   // compile error, __bits explicit 2
I b == 2
b := b + 2  // OK (drop bits)
I b == 0    // 4u2bits -> 0b100[[0..1]] == 0
