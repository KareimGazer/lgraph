
cc_library(
  name = "ffi",
  hdrs = glob(["*.h"]),
  includes = [ "." ], # Needed because some includes use <foo.h>
  deps = [":libffi"],
  visibility = ["//visibility:public"],
)

cc_import(
  name = "libffi",
  interface_library = "libffi.so",
  system_provided = 1,
  visibility = ["//visibility:public"],
)
