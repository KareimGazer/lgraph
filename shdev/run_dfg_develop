# executing in ~/lgraph directory and move logs back into ~/lgraph/shdev
cd ../
rm -rf lgdb
bazel build //...
bazel run //pyth:test_dfg > ./shdev/tmp_log
rm -rf logs
mkdir logs

ln -s /soe/swang203/lgraph/bazel-out/k8-fastbuild/bin/pyth/test_dfg.runfiles/__main__/lgdb/ lgdb
./inou/yosys/lgyosys -gpt_simple_add_dfg
./bazel-bin/inou/json/lgjson --graph_name pt_simple_add_dfg --json_output pt_simple_add_dfg.json

rm -rf ./shdev/logs
rm -rf ./shdev/lgdb
rm -f  ./shdev/pt_simple_add_dfg.json
rm -f  ./shdev/pt_simple_add_dfg.v ./shdev/pt_simple_add_dfg_dirty.v
mv logs ./shdev
mv *.json ./shdev
cp lgdb ./shdev/ -rf
mv *.v ./shdev

cd ./shdev
gvim -p ./tmp_log  ./pt_simple_add_dfg.v  ./pt_simple_add_dfg.json ./logs/pt* 

